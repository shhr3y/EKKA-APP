<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        card_view:cardPreventCornerOverlap="false"
        android:layout_height="208dp"
        app:cardElevation="0dp"
        android:elevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="0dp"
            >
            <ImageView
                android:id="@+id/wishstyleImage"
                android:layout_width="135dp"
                android:layout_height="157dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/modelpic1" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="99dp"
                android:layout_height="40dp"
                android:layout_below="@+id/wishstyleImage"
                android:id="@+id/customizeWishlist"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textAlignment="center"
                fancy:fb_defaultColor="#BD4040"
                fancy:fb_focusColor="#bd6f6f"
                fancy:fb_text="Edit"
                fancy:fb_radius="30dp"
                fancy:fb_fontIconResource="&#xf0c4;"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>